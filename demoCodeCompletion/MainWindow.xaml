<Window x:Class="demoCodeCompletion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ed ="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:local="clr-namespace:demoCodeCompletion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <ed:TextEditor Name="CodeEditor" HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Auto" ShowLineNumbers="True">

        </ed:TextEditor>
        <TextBox Grid.Row="1" Name="OutText"/>
    </Grid>
</Window>
